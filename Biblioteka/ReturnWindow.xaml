<Window x:Class="Biblioteka.ReturnWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Biblioteka"
        mc:Ignorable="d"
        Title="Oddaj" Height="450" Width="800">
    <Grid x:Name="Background">
        <Grid x:Name="Content" Height="300" Width="500" HorizontalAlignment="Center" VerticalAlignment="Center" Background="DarkKhaki">
            <Label Content="Twoje wypożyczone książki:" Margin="20,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="16"/>
            <ListBox x:Name="BorrowedBooksListBox" Margin="20,40,20,60" DisplayMemberPath="Title"/>
            <Button Content="Oddaj książkę" x:Name="ReturnBookButton" Width="120" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" Click="ReturnBookButton_Click"/>
        </Grid>

    </Grid>
</Window>
