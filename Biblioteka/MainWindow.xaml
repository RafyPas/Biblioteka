<Window x:Class="Biblioteka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Biblioteka"
        mc:Ignorable="d"
        Title="Biblioteka" Height="450" Width="800">
    <Grid x:Name="Main" Margin="0,0,625,0">
        <Grid x:Name="Menu" Background="DarkKhaki" Margin="0,0,-25,0">
            <Button Name="borrow_button" Content="Wypożycz" HorizontalAlignment="Left" Margin="33,160,0,0" VerticalAlignment="Top" Height="29" Width="106" Background="LightGray" Click="borrow_button_click"/>
            <Button Name="return_button" Content="Oddaj" HorizontalAlignment="Left" Margin="35,286,0,0" VerticalAlignment="Top" Height="29" Width="106" Background="LightGray" Click="return_button_click"/>
            <Button Name="add_button" Content="Dodaj" HorizontalAlignment="Left" Margin="33,225,0,0" VerticalAlignment="Top" Height="29" Width="106" Background="LightGray" Click="add_button_click"/>
            <Label Content="Menu" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="33,50,42,0" VerticalAlignment="Top" Height="50" FontSize="25" />
        </Grid>
        <Grid x:Name="Background" Margin="180,0,-625,0">
            <Grid x:Name="log_form" Width="300" Height="300" Margin="0,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" Background="DarkKhaki">
                <Label Content="Zaloguj się:" Margin="75,40,75,0" Width="150" Height="40" FontSize="20" VerticalAlignment="Top" HorizontalContentAlignment="Center"></Label>
                <TextBox Margin="25,100,25,175" Width="250" Height="25" VerticalContentAlignment="Center" Text="Username"/>
                <TextBox Margin="25,150,25,125" Width="250" Height="25" VerticalContentAlignment="Center" Text="Password"/>
                <Button Content="Utwórz konto!" HorizontalAlignment="Center" VerticalAlignment="Top" HorizontalContentAlignment="Center" Margin="0,190,0,0" Width="100" Height="20" FontSize="10"></Button>
                <Button x:Name="log_btn" Content="Zaloguj się" FontSize="10" Width="100" Height="20" Margin="100,170,100,0"></Button>
            </Grid>
        </Grid>
    </Grid>

</Window>
